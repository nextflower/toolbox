	<bean id="cmsSiteCompanyDao" class="com.toolbox.core.dao.impl.CmsSiteCompanyDaoImpl"/>
	<bean id="cmsUserResumeDao" class="com.toolbox.core.dao.impl.CmsUserResumeDaoImpl"/>

	<bean id="authenticationMng" class="com.toolbox.core.manager.impl.AuthenticationMngImpl"/>
